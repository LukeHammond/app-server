<h1>Listing meals</h1>

<table>
  <tr>
    <th>Wine</th>
    <th>Bread</th>
    <th>Cheese</th>
    <th></th>
  </tr>

<% @meals.each do |meal| %>
  <tr>
    <td><%= meal.wine_id %></td>
    <td><%= meal.bread_id %></td>
    <td><%= meal.cheese_id %></td>
    <td><%= link_to 'Show', meal %></td>
    <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
    <td><%= link_to 'Destroy', meal, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Meal', new_meal_path %>
